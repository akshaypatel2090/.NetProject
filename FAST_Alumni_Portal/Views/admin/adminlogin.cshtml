@model DBModel.admin

@{
    ViewBag.Title = "Administrative Login";
}

@using (Html.BeginForm("adminlogin", "Admin", FormMethod.Post))
{
    <fieldset>
        <legend>Administrative Login</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }
        <div class="form-group">
            <div>
                <label for="user">Username:</label>
                @Html.TextBoxFor(a => a.username)
            </div>
        </div>
        <div class="form-group">
            <div>
                <label for="pass">Password:</label>
                @Html.PasswordFor(a => a.password)
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="background-color:black">Login</button>

        &nbsp;
    </fieldset>
}
