@model DBModel.student

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("studentlogin1", "Account", FormMethod.Post))
{
<fieldset>
    <legend>Student Login</legend>

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @if (@ViewBag.Message != null)
    {
        <div style="border: 1px solid red">
            @ViewBag.Message
        </div>
    }
    <div class="form-group">
        <div>
            <label for="user">Student ID:</label>
            @Html.TextBoxFor(a => a.alumni_id)
        </div>
    </div>
    <div class="form-group">
        <div>
            <label for="pass">Password:</label>
            @Html.PasswordFor(a => a.password)
        </div>
    </div>
    <button type="submit" class="btn btn-primary" style="background-color:black">Login</button>

    &nbsp;
</fieldset>
}
 